<%= form_for(@category) do |f| %>
    <%= f.radio_button :title, 'body collection' %> 
    <%= f.label :title, 'Body Collection', :value => 'body' %>
    <%= f.radio_button :title, 'hair collection' %>
    <%= f.label :title, 'Hair Collection', :value => 'hair' %>
    <%= f.radio_button :title, 'wellness collection' %>
    <%= f.label :title, 'Wellness Collection', :value => 'wellness' %> <br>
  <%= f.fields_for :product do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %> <br>
    <%= f.label :description %>
    <%= f.text_field :description %> <br>
    <%= f.label :price %> 
    <%= f.text_field :price %> <br>
    <% end %>
    <%=f.submit %>
    
  <% end %>