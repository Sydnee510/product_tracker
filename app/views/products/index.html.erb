<h1>All Products</h1>
<%= link_to 'Create Product', new_product_path %><br> <br>
<% @products.each do |product| %>
    
    <%= link_to product.name, product %><br>
    <%= link_to "Delete", product_path(product), method: :delete, class: "destroy", data: {confirm: "Are you sure?"} %><br>
    <%= link_to "Edit", edit_product_path(product) %><br><br>
   
    <% end %>